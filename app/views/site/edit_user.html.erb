<div class="section">
	<div class="container-fluid">
		<h2>Edición de Usuarios</h2>
		<div class="row">
			<div class="col-md-5">
				<div class="basic-login">
					<%if @user.errors.any?%>
					    <div class="alert alert-warning">
					        <%=pluralize(@user.errors.count,"error")%> no permitieron llevar a cabo la operacion 
					        <ul>
					            <%@user.errors.full_messages.each do |msg|%>
					                <li><%= msg %></li>
					            <%end%>
					        </ul>
					    </div>
					<%end%>
					<%=form_for @user, :url => {:controller => "users", :action => "update"} do |f|%>
						<div class="form-group">
							<label for="firstname">Nombre</label>
							<%=f.text_field :firstname, :class => "form-control"%>
						</div>
						<div class="form-group">
							<label for="lastname">Apellido</label>
							<%=f.text_field :lastname, :class => "form-control"%>
						</div>
						<div class="form-group">
							<label for="email">Email</label>
							<%=f.email_field :email, :class => "form-control"%>
						</div>
						<div class="form-group">
							<label for="phone">Telefono</label>
							<%=f.phone_field :phone, :class => "form-control"%>
						</div>
						<div class="form-group">
							<label for="mobile">Celular</label>
							<%=f.phone_field :mobile, :class => "form-control"%>
						</div>
						<div class="form-group">
							<label for="location">Dirección</label>
							<%=f.text_field :location, :class => "form-control"%>
						</div>
						<div class="form-group">
							<%=f.submit "Actualizar Datos", :class => "btn btn-lg btn-block"%>
						</div>
					<%end%>
				</div>
			</div>
		</div>
	</div>
</div>
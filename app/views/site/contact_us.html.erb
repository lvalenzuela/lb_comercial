<div class="section">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-6">
				<div class="row">
					<div id="map" style="width:100%; height:400px;"></div>
				</div>
				<div class="row">
					<div class="col-xs-12">
	        			<p class="contact-us-details">
	        				<b>Direcci√≥n:</b> Coronel Pereira 77, Piso 11, Las Condes<br/>
	        				<b>Phone:</b> +44 123 45678<br/>
	        				<b>Fax:</b> +44 123 456789<br/>
	        				<b>Email:</b> <a href="mailto:getintoutch@yourcompanydomain.com">contacto@longbourn.cl</a>
	        			</p>
					</div>
				</div>
			</div>
			<%=form_tag :action => :contact do%>
			<div class="col-xs-5">
				<div class="form-group">
					<label>Nombre</label>
					<%=text_field_tag :user_name, nil, :class => "form-control"%>
				</div>
				<div class="form-group">
					<label>Correo</label>
					<%=email_field_tag :email, nil, :class => "form-control"%>
				</div>
				<div class="form-group">
					<label>Telefono de Contacto</label>
					<%=phone_field_tag :phone, nil, :class => "form-control"%>
				</div>
				<div class="form-group">
					<label>Asunto</label>
					<%=text_field_tag :subject, nil, :class => "form-control"%>
				</div>
				<div class="form-group">
					<label>Mensaje</label>
					<%=text_area_tag :msg, nil, :class => "form-control"%>
				</div>
				<div class="form-group">
					<div class="pull-right">
						<%=submit_tag "Enviar", :class => "btn btn-default"%>
					</div>
				</div>
			</div>
			<%end%>
		</div>
	</div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers([
    {
      "lat": -33.413213,
      "lng": -70.5795309,
      "picture": {
        "url": "https://cdn3.iconfinder.com/data/icons/iconic-1/32/map_pin_fill-512.png",
        "width":  36,
        "height": 36
      },
      "infowindow": "hello!"
    }
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
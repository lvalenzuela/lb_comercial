<div class="section">
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-5 col-sm-offset-1 purchase-confirmation">
				<h2>Datos del Cliente</h2>
				<label>Usuario</label>
				<%=text_field_tag :name, @user.name, :disabled => true, :class => "form-control"%>
				<label>Email</label>
				<%=text_field_tag :email, @user.email, :disabled => true, :class => "form-control"%>
				<label>Direccion</label>
				<%=text_field_tag :location, @user.location, :disabled => true, :class => "form-control"%>
				<label>Telefono de Contacto</label>
				<%=text_field_tag :phone, @user.phone, :disabled => true, :class => "form-control"%>
				<label>Celular de contacto</label>
				<%=text_field_tag :mobile, @user.mobile, :disabled => true, :class => "form-control"%>
				<%=link_to "Editar Datos de Usuario", {:controller => "site", :action => "edit_user"}, {:class => "btn btn-default"}%>
			</div>
			<div class="col-sm-5 purchase-confirmation">
				<h2>Datos del Curso Seleccionado</h2>
				<table class="table">
					<tr>
						<th>Fecha Actual</th>
						<td><%=Date.current%></td>
					</tr>
					<tr>
						<th>Curso</th>
						<td><%=@course.coursename%></td>
					</tr>
					<tr>
						<th>Modalidad</th>
						<td><%=course_mode_name(@course.mode)%></td>
					</tr>
					<tr>
						<th>Tipo Curso</th>
						<td><%=get_coursetype(@course.course_type_id)%></td>
					</tr>
					<tr>
						<th>Fecha Inicio</th>
						<td><%=l(@course.start_date, :format => "%d-%m-%Y")%></td>
					</tr>
					<tr>
						<th>Ubicaci√≥n</th>
						<td><%=location_label(@course.location_id)%></td>
					</tr>
					<tr>
						<th>Horario</th>
						<td>
							<%=classroom_matching_label(@course.classroom_matching_id)%>
						</td>
					</tr>
					<tr>
						<th>Precio</th>
						<td><%=number_to_currency(price_with_discount(@course),:precision => 0)%> (<b><%=@course.discount_pct%></b> de Descuento.)</td>
					</tr>
					
				</table>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-4 col-sm-offset-2">
				<%=link_to "<i class='fa fa-envelope fa-lg'></i> Contactar Agente de Ventas".html_safe, {:controller => :site, :action => :contact_sales_agent, :params => {:courseid => @course.id, :userid => current_user.id}}, {:class => "btn btn-lg btn-block"}%>
			</div>
			<div class="col-sm-4">
				<%=link_to "<i class='fa fa-arrow-right fa-lg'></i> Continuar Compra".html_safe , {:controller => "site", :action => "register_purchase"}, {:class => "btn btn-lg btn-block"}%>
			</div>
		</div>
	</div>
</div>

<div class="section">
	<div class="container-fluid">
		<div class="row">
			<h2>Contacto Longbourn</h2>
			<div class="col-sm-6">
				<div class="basic-login">
					<%=form_for @lead, :url => {:controller => "users", :action => "register_lead"} do |f|%>
						<%=f.hidden_field :lead_source, :value => "Web Longbourn"%>
						<div class="form-group">
							<label for="company">Organizacion</label>
							<%=f.text_field :company, :class => "form-control"%>
						</div>
						<div class="form-group">
							<label for="firstname">Nombre</label>
							<%=f.text_field :firstname, :class => "form-control"%>
						</div>
						<div class="form-group">
							<label for="firstname">Apellido</label>
							<%=f.text_field :lastname, :class => "form-control"%>
						</div>
						<div class="form-group">
							<label for="gender">Genero</label>
							<%=f.select :gender, options_for_select([["Masculino","male"],["Femenino","female"]], "male"), {}, {:class => "form-control"}%>
						</div>
						<div class="form-group">
							<label for="email">Email</label>
							<%=f.email_field :email, :class => "form-control"%>
						</div>
						<div class="form-group">
							<label for="title">Cargo</label>
							<%=f.text_field :title, :class => "form-control"%>
						</div>
						<div class="form-group">
							<label for="phone">Telefono de Contacto</label>
							<%=f.phone_field :phone, :class => "form-control"%>
						</div>
						<div class="form-group">
							<label for="mobile">Celular</label>
							<%=f.phone_field :mobile, :class => "form-control"%>
						</div>
						<div class="form-group">
							<%=submit_tag "Enviar Datos", :class => "btn btn-lg pull-right"%>
							<div class="clearfix"></div>
						</div>
					<%end%>
				</div>
			</div>
		</div>
	</div>
</div>

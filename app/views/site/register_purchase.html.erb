<div class="section">
	<div class="container-fluid">
		<h2>Detalles de la Compra</h2>
		<div class="row">
			<div class="col-sm-12">
				<%=flash[:notice]%>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-12">
				<table>
					<tr>
						<td><b>Curso</b></td>
						<td><%=@course.coursename%></td>
					</tr>
					<tr>
						<td><b>Modalidad</b></td>
						<td><%=@course.mode%></td>
					</tr>
					<tr>
						<td><b>Tipo de Curso</b></td>
						<td><%=get_coursetype(@course.course_type_id)%></td>
					</tr>
					<tr>
						<td><b>Fecha de Inicio</b></td>
						<td><%=@course.start_date.strftime("%d-%m-%Y")%></td>
					</tr>
					<tr>
						<td><b>Dia 1</b></td>
						<td><%=get_course_feature(@course_features,"first_day")+" "+get_course_feature(@course_features,"first_day_hour")%></td>
					</tr>
					<tr>
						<td><b>Dia 2</b></td>
						<td><%=get_course_feature(@course_features,"second_day")+" "+get_course_feature(@course_features,"second_day_hour")%></td>
					</tr>	
					<tr>
						<td><b>Precio del Curso</b></td>
						<td><%=number_to_currency(get_course_feature(@course_features,"price").to_i, :precision => 0)%></td>
					</tr>
					<tr>
						<td>Alumno</td>
						<td><%=@user.name%></td>
					</tr>
				</table>
			</div>
		</div>
	</div>
</div>
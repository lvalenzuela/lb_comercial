<script type="text/javascript">
        $(document).ready(function() {
            if ($(window).width() < 992) {  
                var pos_init = $('#main-bgvid').position().top;
                var pos_title = $('#main-video-titles').position().top;
                var height_title = $('#main-video-titles').height();
                var height_channel = $('#channels-row').height();
            
                var totalHeight = (pos_title - pos_init) + height_title + height_channel; 

                $('#layerslider').css ("height",totalHeight);
            }   
        }); 
</script>
    <script type="text/javascript">
        $(window).ready(function() {
            var highestCol = Math.max($('#ejecutivo').outerHeight(),$('#instituto').outerHeight(),$('#empresarial').outerHeight(),$('#toefl').outerHeight());
            $('.channel-block').height((highestCol*1+20));
            $('.sp-button').css("height",highestCol);
        });

    </script>


<section id="slider-wrapper" class="layer-slider-wrapper layer-slider-dynamic">
    <div id="layerslider" class="main-video-wrapper"> 
        <%=image_tag "web-imgs/empresas/empresas_index.jpg", :class => "img-responsive", :id => "main-bgvid" %>
        <div id="main-video-titles">
	       <h1 class="ls-l title c-white text-wrapped text-uppercase text-center strong">
	            Cursos de Inglés para <b>Profesionales</b> y <b>Ejecutivos</b>
            </h1>
	    </div> 
        <div id="channels-row">
            <div class="col-sm-12 channels-title">
                <h3 class="ls-l title c-white text-wrapped text-uppercase text-center strong">
                    <b>¿Qué Necesitas?</b>
                </h3>
            </div>
            <div class="col-sm-3 channel-block">
                <button class="btn btn-lg btn-block btn-dark sp-button" style="margin:0px" id="ejecutivo" 
                onclick= <%= "javascript:location.href='" + ingles_ejecutivo_path + "'"%> >
                    <h3 class="index-title">Longbourn Executive</h3>
                    <span class="subtitle">Inglés en tu Oficina</span>
                    
                </button>
            </div>
            
            <div class="col-sm-3 channel-block">
